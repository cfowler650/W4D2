


<style>table,
td {
    border: 1px solid #333;
}

thead,
tfoot {
    background-color: #333;
    color: #fff;
}</style>
<table>
    <thead>
        <tr>
            <th colspan="2"><%= cat.name %></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Color: </td>
            <td><%= cat.color %></td>
        </tr>
        <tr>
            <td>Birth Day: </td>
            <td><%= cat.birth_date %></td>
        </tr>
        <tr>
            <td>Sex: </td>
            <td><%= cat.sex %></td>
        </tr>
        <tr>
            <td>Description: </td>
            <td><%= cat.description %></td>
        </tr>
    </tbody>
</table>


<% if action == :show %>
    <li>
      <a href = "<%= cats_url %>">go to index</a>
    </li>
<% elsif action == :index %>



    <li>
      <a href = "<%= cat_url(cat) %>">go to cat</a>
    </li>
<% end %>