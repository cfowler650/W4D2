


<style>table,
td {
    border: 1px solid #333;
}

thead,
tfoot {
    background-color: #333;
    color: #fff;
}</style>

    <%# HEADER OF SHOW PAGE %>
      <% if action == :show%>
        
        <h1> Welcome to <%= cat.name%>'s very own page! </h1>
      <% end %>

   <%# END HEADER OF SHOW PAGE %>



<table>
    <thead>
        <tr>
            <th colspan="2"><%= cat.name %></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Color: </td>
            <td><%= cat.color %></td>
        </tr>
        <tr>
            <td>Birth Day: </td>
            <td><%= cat.birth_date %></td>
        </tr>
        <tr>
            <td>Sex: </td>
            <td><%= cat.sex %></td>
        </tr>
        <tr>
            <td>Description: </td>
            <td><%= cat.description %></td>
        </tr>
    </tbody>
</table>


<% if action == :show %>


    <style>
      a {
       margin-left: 30px;
      }
    </style>

      

      <a href = "<%= cats_url %>">Go back to index</a>
   
    <br>
<% elsif action == :index %>

      <style>
        a {
        margin-left: 40px;
        }
      </style>
      
    
      <a href = "<%= cat_url(cat) %>">Go to this cat</a>
    <br>
    <br>
<% end %>